<resources>

    <style name="login_et">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
    </style>


<!--drawer header activity and its elements-->
    <style name="drawer_r_layout">
        <item name="android:layout_width">match_parent</item>
        <!--Fixed size of height-->
        <item name="android:layout_height">172dp</item>
        <item name="android:paddingTop">@dimen/spacing_medial_24</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
        <item name="android:paddingBottom">@dimen/spacing_small_8</item>
        <item name="android:background">@drawable/nav_header_bg</item>
    </style>

    <style name="drawer_i_view">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="drawer_l_layout">
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="drawer_t_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="drawer_t_view.user_name" parent="drawer_t_view">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="drawer_t_view.email" parent="drawer_t_view">
<!--
        <item name="android:fontFamily">sans-serif</item>
-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>
    <style name="main_activity_textEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="main_activity_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
    </style>

    <style name="main_activity_textInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_activity_itemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="main_activity_textInputLayout_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <!--<item name="android:layout_height">wrap_content</item>-->
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
    </style>

    <style name="main_activity_textMultilineInputLayout_container" parent="main_activity_textInputLayout_container">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
    </style>

    <style name="main_activity_title_item_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_activity_title_item_container.side" parent="main_activity_title_item_container">
        <item name="android:layout_weight">0.6</item>
    </style>

    <style name="main_activity_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_activity_title_caption" parent="main_activity_title_text">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="main_activity_vertical_divider" parent="main_activity_title_text">
        <item name="android:layout_width">@dimen/vertical_divider_width</item>
        <item name="android:layout_height">@dimen/vertical_divider_height</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@color/color_accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
