<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/drawer_r_layout">
    <ImageView
        android:id="@+id/avatar_img_view"
        style="@style/drawer_i_view"
        android:src="@drawable/avatar_image_2"/>

    <LinearLayout
        style="@style/drawer_l_layout">
        <TextView
            android:id="@+id/user_name_txt"
            style="@style/drawer_t_view"
            android:text="@string/drawer_header_user_name"/>

        <TextView
            android:id="@+id/user_email_txt"
            style="@style/drawer_t_view"
            android:text="@string/drawer_header_user_email"/>
    </LinearLayout>

</RelativeLayout>